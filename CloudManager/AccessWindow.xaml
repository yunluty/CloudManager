<Window x:Class="CloudManager.AccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudManager"
        mc:Ignorable="d"
        Title="接入阿里云" Height="340" Width="445"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="AKI" Grid.Row="0"
                 VerticalAlignment="Bottom" Margin="85,0,85,0" Height="32"
                 VerticalContentAlignment="Center"/>
        <TextBox x:Name="AKS" Grid.Row="1" 
                 VerticalAlignment="Center" Margin="85,0,85,0" Height="32"
                 VerticalContentAlignment="Center"/>
        <Button x:Name="AccessButton" Grid.Row="3" Content="接入"
                VerticalAlignment="Top" Margin="112,0,112,0" Height="30"
                Style="{StaticResource ResourceKey=LoginButton}"
                Click="AccessButton_Click"/>
    </Grid>
</Window>