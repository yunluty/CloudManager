<Window x:Class="CloudManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CloudManager"
        mc:Ignorable="d"
        Title="CloudManager" Height="580" Width="920"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel  Grid.Column="0">
            <Expander x:Name="ECSExpander">
                <Expander.Header>
                    <TextBlock Text="云服务器 ECS"/>
                </Expander.Header>
                <Expander.Content>
                    <ListBox x:Name="ECSList" BorderThickness="0" BorderBrush="Transparent"
                             SelectionChanged="ECSList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InstanceName}"></TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander.Content>
            </Expander>
            <Expander>
                <Expander.Header>
                    <TextBlock Text="云数据库 RDS 版"/>
                </Expander.Header>
                <Expander.Content>
                    <ListBox x:Name="RDSList" BorderThickness="0" BorderBrush="Transparent"
                             SelectionChanged="RDSList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InstanceName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander.Content>
            </Expander>
            <Expander>
                <Expander.Header>
                    <TextBlock Text="对象储存 OSS"/>
                </Expander.Header>
                <Expander.Content>
                    <ListBox x:Name="OSSList" BorderThickness="0" BorderBrush="Transparent"
                             SelectionChanged="OSSList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InstanceName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander.Content>
            </Expander>
            <Expander>
                <Expander.Header>
                    <TextBlock Text="负载均衡 SLB"/>
                </Expander.Header>
                <Expander.Content>
                    <ListBox x:Name="SLBList" BorderThickness="0" BorderBrush="Transparent"
                             SelectionChanged="SLBList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InstanceName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander.Content>
            </Expander>
            <Expander>
                <Expander.Header>
                    <TextBlock Text="域名"/>
                </Expander.Header>
                <Expander.Content>
                    <ListBox x:Name="DomainList" BorderThickness="0" BorderBrush="Transparent"
                             SelectionChanged="DomainList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding InstanceName}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Expander.Content>
            </Expander>
        </StackPanel>
        <Frame x:Name="Information" Grid.Column="1"/>
    </Grid>
</Window>
