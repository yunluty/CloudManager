<Page x:Class="CloudManager.DownUpLoadTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudManager"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="BackupTaskPage">

    <StackPanel Margin="5,0,5,0">
        <ListBox x:Name="RunningList" BorderThickness="0" BorderBrush="Transparent" Background="Transparent"
                 Visibility="{Binding Path=TaskType , Converter={StaticResource VisibilityConverter}, ConverterParameter=Running}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="32" Height="32" Stretch="None" Margin="5,0,0,0"
                               Source="{Binding InstanceType, Converter={StaticResource StatusImageConverter}}"/>
                        <Label Content="{Binding InstanceName}" Margin="10,0,0,0" Width="120" VerticalAlignment="Center"/>
                        <Label Content="{Binding FileName}" Margin="5,0,0,0" Width="280" VerticalAlignment="Center"/>
                        <Label Content="{Binding TotalSize, Converter={StaticResource FileSizeConverter}}"
                               Width="80" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="5,0,0,0">
                            <ProgressBar Value="{Binding Progress}" Width="150" Height="15"/>
                            <Label Content="{Binding ProgressPercent}" Width="40" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                        <Label Content="{Binding Status, Converter={StaticResource StatusTextConverter}}" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="FinishedList" BorderThickness="0" BorderBrush="Transparent" Background="Transparent" MaxHeight="680"
                 Visibility="{Binding Path=TaskType, Converter={StaticResource VisibilityConverter}, ConverterParameter=Finished}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="32" Height="32" Stretch="None" Margin="5,0,0,0"
                               Source="{Binding InstanceType, Converter={StaticResource StatusImageConverter}}"/>
                        <Label Content="{Binding InstanceName}" Margin="10,0,0,0" Width="120" VerticalAlignment="Center"/>
                        <Label Content="{Binding FileName}" Margin="5,0,0,0" Width="300" VerticalAlignment="Center"/>
                        <Label Content="{Binding TotalSize, Converter={StaticResource FileSizeConverter}}"
                               Width="80" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        <Label Content="{Binding CompleteTime}" VerticalAlignment="Center" Margin="5,0,0,0" Width="240"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Page>
