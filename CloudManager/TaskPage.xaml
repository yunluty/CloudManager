<Page x:Class="CloudManager.TaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CloudManager"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BackupTaskPage">

    <StackPanel>
        <ListBox x:Name="RunningList"
                 Visibility="{Binding TaskType, Converter={StaticResource VisibilityConverter}, ConverterParameter=Running}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding InstanceType, Converter={StaticResource StatusImageConverter}}"/>
                        <TextBlock Text="{Binding InstanceName}" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding FileName}" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding TotalSize, Converter={StaticResource FileSizeConverter}}"
                                   VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <ProgressBar Value="{Binding Progress}" Width="100" Height="10"/>
                            <TextBlock Text="{Binding ProgressPercent}"  VerticalAlignment="Center"  Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="CompleteList">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding InstanceType, Converter={StaticResource StatusImageConverter}}"/>
                        <TextBlock Text="{Binding InstanceName}" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding FileName}" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding TotalSize, Converter={StaticResource FileSizeConverter}}"
                                   VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBlock Text="{Binding CompleteTime}" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Page>
